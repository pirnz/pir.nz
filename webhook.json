[
  {
    "id": "allow-me",
    "execute-command": "null",
    "response-message": "<html><body><p>You have my permission. <a href=\"https://pir.nz/\">Go home</a></p></body></html>",
    "response-headers": [
      {
        "name": "Set-Cookie",
        "value": "john=difool; Domain=pir.nz; Secure; Max-Age=3600; Path=/; SameSite=Strict"
      }
    ],
    "trigger-rule": {
      "match": {
        "type": "value",
        "value": "read",
        "parameter": {
          "source": "url",
          "name": "to"
        }
      }
    }
  },
  {
    "id": "sync-reader",
    "execute-command": "/mnt/hdd/data/pir.nz/scripts/sync-ereader.sh",
    "command-working-directory": "/mnt/hdd/data/pir.nz",
    "response-message": "Sync done!",
    "pass-environment-to-command":
    [
      {
        "source": "url",
        "envname": "HOST",
        "name": "host"
      }
    ],
    "trigger-rule": {
       "and": [
	       
	       {"match": {
	        "type": "regex",
       		"value": ".*",
        	"parameter": {
          		"source": "url",
          		"name": "host"
        	}
      		}},
		
		{"match": {
		"type": "value",
		"value": "incal",
		"parameter": {
			"source": "url",
			"name": "soy"
		}}}
       ]
    }
  },
  {
    "id": "can-i",
    "execute-command": "/mnt/hdd/data/pir.nz/scripts/open-issue.sh",
    "command-working-directory": "/mnt/hdd/data/pir.nz",
    "response-message": "Thank you!",
    "success-http-response-code": 302,
    "response-headers": [
    	{
		"name": "Location",
		"value": "/thank-you/"
	}
    ],
    "pass-environment-to-command":
    [
      {
        "source": "payload",
        "envname": "NAME",
        "name": "name"
      },
      {
        "source": "payload",
        "envname": "EMAIL",
        "name": "email"
      },
      {
        "source": "payload",
        "envname": "REASON",
        "name": "reason"
      }
    ],
    "trigger-rule": {
      "match": {
        "type": "value",
        "value": "form",
        "parameter": {
          "source": "url",
          "name": "origin"
        }
      }
    }
  },
  {
    "id": "redeploy",
    "execute-command": "/mnt/hdd/data/pir.nz/scripts/redeploy-pir.nz.sh",
    "command-working-directory": "/mnt/hdd/data/pir.nz",
    "pass-arguments-to-command": [
      {
        "source": "payload",
        "name": "head_commit.id"
      },
      {
        "source": "payload",
        "name": "pusher.name"
      },
      {
        "source": "payload",
        "name": "pusher.email"
      }
    ],
    "trigger-rule": {
      "and": [
        {
          "match": {
            "type": "payload-hmac-sha1",
            "secret": "pwrQYVCKSKu40dhM04U6iLYUl1HeGGTgFsOimKAU",
            "parameter": {
              "source": "header",
              "name": "X-Hub-Signature"
            }
          }
        },
        {
          "match": {
            "type": "value",
            "value": "refs/heads/main",
            "parameter": {
              "source": "payload",
              "name": "ref"
            }
          }
        }
      ]
    }
  }
]
